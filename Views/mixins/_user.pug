mixin user()
	#userInformations.row.valign.hidden
		.col-lg-4.offset-lg-4
			.jumbotron
				.innerJumbotron
					h3.display-4.text-center#userUsername
					button#closeUserInfo(type="button" class="close" data-dismiss="modal" aria-label="Close")
						span(aria-hidden="true") &times;
					.text-center(style="width: 100%;")
						img#userPicture(src=`/assets/empty_user.png` style="max-width: 100%;")
					br
					.text-center#userComments
